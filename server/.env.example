# Copy this file to .env and fill in your values

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eternity_tickets
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_POOL_MIN=10
DB_POOL_MAX=50

# JWT (Generate strong secrets!)
JWT_SECRET=generate-a-strong-secret-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=generate-another-strong-secret
JWT_REFRESH_EXPIRES_IN=7d

# Server
NODE_ENV=development
PORT=5000

# API Configuration
API_PREFIX=/api

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# FILE UPLOAD CONFIGURATION
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=2097152
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg
MAX_JSON_SIZE=10mb

# Email (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM_NAME=Eternity Ticket
EMAIL_FROM_ADDRESS=noreply@eternityticket.com

# VNPay (Sandbox)
VNPAY_TMN_CODE=your_tmn_code
VNPAY_HASH_SECRET=your_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:5000/api/payment/vnpay/callback

# Redis (Optional - for queue system)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Queue processor settings
QUEUE_PROCESSOR_INTERVAL=5000          # Process every 5 seconds
WAITING_ROOM_ENABLED=true
TICKET_HOLD_DURATION_MINUTES=15
MAX_QUEUE_CAPACITY=1000
VAT_RATE=0.1
PREMIUM_DISCOUNT_RATE=0.1
ADVANCED_DISCOUNT_RATE=0.05

# LOGGING
LOG_LEVEL=debug
LOG_FILE=./logs/app.log